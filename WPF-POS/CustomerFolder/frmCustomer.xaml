<Window x:Class="WPF_POS.frmCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_POS"
        mc:Ignorable="d"
        WindowState="Maximized"
        Background="LightBlue"
        Title="frmCustomer" Height="650" Width="800">

    <Grid>
        <Border Background="AliceBlue"
                CornerRadius="25"
                Width="700"
                Height="550"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <!--row1 customer entry-->
                <Rectangle Grid.Row="1" Fill="Pink"/>
                <TextBlock Grid.Row="1"
                    Text="Customer Entry"
                    FontSize="45"
                    FontWeight="Bold"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                />

                <!--row2 info and button-->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.4*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--column0 info-->
                    <Grid Grid.Column="0" Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0"
                                    HorizontalAlignment="Center">
                            <TextBlock
                                Text="Id"
                                FontSize="25"
                                Margin="0,0,0,6"
                            />
                            <TextBox
                                Name="txtId"
                                IsReadOnly="True"
                                
                                Width="300"
                                Height="40"
                                Background="AliceBlue"
                                FontSize="25"
                            />
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1"
                                    HorizontalAlignment="Center">
                            <TextBlock
                                Text="Name"
                                FontSize="25"
                                Margin="0,0,0,6"
                            />
                            <TextBox
                                Name="txtName"
                                
                                Width="300"
                                Height="40"
                                Background="AliceBlue"
                                FontSize="25"
                            />
                        </StackPanel>
                        
                        <StackPanel Grid.Row="2"
                                    HorizontalAlignment="Center">
                            <TextBlock
                                Text="Phone"
                                FontSize="25"
                                Margin="0,0,0,6"
                            />
                            <TextBox
                                Name="txtPhone"
                                
                                Width="300"
                                Height="40"
                                Background="AliceBlue"
                                FontSize="25"
                            />
                        </StackPanel>
                        
                        <StackPanel Grid.Row="3"
                                    HorizontalAlignment="Center">
                            <TextBlock
                                Text="Address"
                                FontSize="25"
                                Margin="0,0,0,6"
                            />
                            <TextBox
                                Name="txtAddress"
                                
                                Width="300"
                                Height="40"
                                Background="AliceBlue"
                                FontSize="25"
                            />
                        </StackPanel>
                    </Grid>

                    <!--column1 button-->
                    <StackPanel Grid.Column="2"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Button
                            Name="btnAdd"
                            Click="btnAdd_Click"
                            
                            Content="Add"
                            Width="130"
                            Height="50"
                            FontSize="23"
                            FontWeight="Bold"
                            Margin="0,10,0,10"
                            Background="LimeGreen"
                        />
                        <Button
                            Name="btnUpdate"
                            Click="btnUpdate_Click"
                            
                            Content="Update"
                            Width="130"
                            Height="50"
                            FontSize="23"
                            FontWeight="Bold"
                            Margin="0,10,0,10"
                            Background="LightSalmon"
                        />
                        <Button
                            Name="btnDelete"
                            Click="btnDelete_Click"
                            
                            Content="Delete"
                            Width="130"
                            Height="50"
                            FontSize="23"
                            FontWeight="Bold"
                            Margin="0,10,0,10"
                            Background="LightSalmon"
                        />
                        <Button
                            Name="btnBrowse"
                            Click="btnBrowse_Click"
                            
                            Content="Browse"
                            Width="130"
                            Height="50"
                            FontSize="23"
                            FontWeight="Bold"
                            Margin="0,10,0,10"
                            Background="LightSalmon"
                        />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>