<Window x:Class="WPF_POS.frmProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_POS"
        mc:Ignorable="d"
        WindowState="Maximized"
        Background="LightBlue"
        Title="frmProduct" Height="650" Width="800">

    <Grid>
        <Border Background="AliceBlue"
                CornerRadius="25"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="700"
                Height="550">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--row1 product entry-->
                <Rectangle Grid.Row="1" Fill="Orange"/>
                <TextBlock Grid.Row="1"
                    Text="Product Entry"     
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="45"
                    FontWeight="Bold"
                />

                <!--row2 info and button-->
                <Grid Grid.Row="2" Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="0.3*"/>
                    </Grid.ColumnDefinitions>

                    <!--column0 info-->
                    <Grid Grid.Column="0" Margin="30,30,30,50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0"
                                    VerticalAlignment="Center">
                            <TextBlock
                                Text="Id"
                                FontSize="27"
                                Margin="0,0,0,10"
                            />
                            <TextBox
                                Name="txtId"
                                IsReadOnly="True"    
                                
                                
                                FontSize="25"
                                Height="46"   
                                Background="AliceBlue"
                            />
                        </StackPanel>

                        <!--combo box-->
                        <StackPanel Grid.Row="1" Grid.Column="0"
                                    VerticalAlignment="Center">
                            <TextBlock
                                Text="Category"
                                FontSize="27"
                                Margin="0,0,0,10"
                            />
                            <ComboBox 
                                Name="cmbCategory"
                                
                                
                                FontSize="25"
                                Height="46"                               
                            />
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0"
                                    VerticalAlignment="Center">
                            <TextBlock
                                Text="Cost Price"
                                FontSize="27"
                                Margin="0,0,0,10"
                            />
                            <TextBox
                                Name="txtCostPrice"
                                
                                
                                FontSize="25"
                                Height="46"  
                                Background="AliceBlue"                                
                            />
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2"
                                    VerticalAlignment="Center">
                            <TextBlock
                                Text="Name"
                                FontSize="27"
                                Margin="0,0,0,10"
                            />
                            <TextBox
                                Name="txtName"
                                
                                
                                FontSize="25"
                                Height="46" 
                                Background="AliceBlue"
                            />
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2"
                                    VerticalAlignment="Center">
                            <TextBlock
                                Text="Unit"
                                FontSize="27"
                                Margin="0,0,0,10"
                            />
                            <TextBox
                                Name="txtUnit"
                                
                                
                                FontSize="25"
                                Height="46"    
                                Background="AliceBlue"
                            />
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="2"
                                    VerticalAlignment="Center">
                            <TextBlock
                                Text="Selling Price"
                                FontSize="27"
                                Margin="0,0,0,10"
                            />
                            <TextBox
                                Name="txtSellingPrice"
                                
                                
                                FontSize="25"
                                Height="46"  
                                Background="AliceBlue"
                            />
                        </StackPanel>
                    </Grid>

                    <!--column2 button-->
                    <StackPanel Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">

                        <Button
                            Name="btnAdd"
                            Click="btnAdd_Click"
                            
                            Content="Add"
                            Width="110"
                            Height="40"
                            FontSize="20"
                            FontWeight="Bold"
                            Margin="0,10,0,10"
                            Background="LimeGreen"
                        />
                        <Button
                            Name="btnUpdate"
                            Click="btnUpdate_Click"
                            
                            Content="Update"
                            Width="110"
                            Height="40"
                            FontSize="20"
                            FontWeight="Bold"
                            Margin="0,10,0,10"
                            Background="LightSalmon"
                        />
                        <Button
                            Name="btnDelete"
                            Click="btnDelete_Click"
                            
                            Content="Delete"
                            Width="110"
                            Height="40"
                            FontSize="20"
                            FontWeight="Bold"
                            Margin="0,10,0,10"
                            Background="LightSalmon"
                        />
                        <Button
                            Name="btnBrowse"
                            Click="btnBrowse_Click"
                            
                            Content="Browse"
                            Width="110"
                            Height="40"
                            FontSize="20"
                            FontWeight="Bold"
                            Margin="0,10,0,10"
                            Background="LightSalmon"
                        />
                    </StackPanel>
                </Grid>
            </Grid>

        </Border>
    </Grid>
</Window>