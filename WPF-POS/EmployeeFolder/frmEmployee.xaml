<Window x:Class="WPF_POS.frmEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_POS"
        mc:Ignorable="d"
        WindowState="Maximized"
        Background="LightBlue"
        Title="frmEmployee" Height="650" Width="800">

    <Grid>
        <Border Background="AliceBlue"
                CornerRadius="25"
                Width="700"
                Height="550"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <!--row1-->
                <Rectangle Grid.Row="1" Fill="Khaki"/>
                <TextBlock Grid.Row="1"
                    Text="Employee Entry"
                    FontSize="40"
                    FontWeight="Bold"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                />
                
                <!--row2-->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.35*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--column0-->
                    <Grid Grid.Column="0" Margin="35">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="0.36*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0"
                                        HorizontalAlignment="Left">
                                <TextBlock
                                    Text="Id"
                                    FontSize="23"
                                    Margin="0,0,0,10"
                                />
                                <TextBox
                                    Name="txtId"
                                    IsReadOnly="True"
                                    
                                    Width="200"
                                    Height="40"
                                    FontSize="25"
                                    Background="AliceBlue"
                                />
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="0"
                                        HorizontalAlignment="Left">
                                <TextBlock
                                    Text="Username"
                                    FontSize="23"
                                    Margin="0,0,0,10"
                                />
                                <TextBox
                                    Name="txtUsername"
                                    Width="200"
                                    Height="40"
                                    FontSize="25"
                                    Background="AliceBlue"
                                />
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="0"
                                        HorizontalAlignment="Left">
                                <TextBlock
                                    Text="Phone"
                                    FontSize="23"
                                    Margin="0,0,0,10"
                                />
                                <TextBox
                                    Name="txtPhone"
                                    Width="200"
                                    FontSize="25"
                                    Height="40"
                                    Background="AliceBlue"
                                />
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1"
                                        HorizontalAlignment="Right">
                                <TextBlock
                                    Text="Name"
                                    FontSize="23"
                                    Margin="0,0,0,10"
                                />
                                <TextBox
                                    Name="txtName"
                                    Width="200"
                                    Height="40"
                                    FontSize="25"
                                    Background="AliceBlue"
                                />
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="1"
                                        HorizontalAlignment="Right">
                                <TextBlock
                                    Text="Password"
                                    FontSize="23"
                                    Margin="0,0,0,10"
                                />
                                <TextBox
                                    Name="txtPassword"
                                    Width="200"
                                    Height="40"
                                    FontSize="25"
                                    Background="AliceBlue"
                                />
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="1"
                                        HorizontalAlignment="Right">
                                <TextBlock
                                    Text="Salary"
                                    FontSize="23"
                                    Margin="0,0,0,10"
                                />
                                <TextBox
                                    Name="txtSalary"
                                    Width="200"
                                    Height="40"
                                    FontSize="25"
                                    Background="AliceBlue"
                                />
                            </StackPanel>
                        </Grid>
                        
                        <StackPanel Grid.Row="1"
                                    >
                            <TextBlock
                                Text="Address"
                                FontSize="23"
                                Margin="0,0,0,10"
                            />
                            <TextBox
                                Name="txtAddress"           
                                Height="50"
                                FontSize="25"
                                Background="AliceBlue"
                            />
                        </StackPanel>
                    </Grid>
                    
                    <!--column1-->
                    <StackPanel Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">

                        <Button
                            Name="btnAdd"
                            Click="btnAdd_Click"
                            
                            Content="ADD"
                            Width="135"
                            Height="50"
                            FontSize="20"
                            FontWeight="Bold"
                            Background="LimeGreen"
                            Margin="0,10,0,10"
                        />
                        <Button
                            Name="btnUpdate"
                            Click="btnUpdate_Click"
                            
                            Content="UPDATE"
                            Width="135"
                            Height="50"
                            FontSize="20"
                            FontWeight="Bold"
                            Background="LightSalmon"
                            Margin="0,10,0,10"
                        /><Button
                            Name="btnDelete"
                            Click="btnDelete_Click"
                            
                            Content="DELETE"
                            Width="135"
                            Height="50"
                            FontSize="20"
                            FontWeight="Bold"
                            Background="LightSalmon"
                            Margin="0,10,0,10"
                        /><Button
                            Name="btnBrowse"
                            Click="btnBrowse_Click"
                            
                            Content="BROWSE"
                            Width="135"
                            Height="50"
                            FontSize="20"
                            FontWeight="Bold"
                            Background="LightSalmon"
                            Margin="0,10,0,10"
                        />
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>